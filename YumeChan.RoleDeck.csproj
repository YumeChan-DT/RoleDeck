<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <Version>1.1.1</Version>
    <Authors>Sakura Akeno Isayeki</Authors>
    <Company>Nodsoft Systems</Company>
    <Product>RoleDeck</Product>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/YumeChan-DT/RoleDeck</RepositoryUrl>

    <OutDir>$(YumeChan_PluginsLocation)</OutDir>
    <OutputPath>$(YumeChan_PluginsLocation)</OutputPath>
    <Copyright>GNU-GPLv3</Copyright>
  </PropertyGroup>

  <ItemGroup>
    <None Remove=".git" />
    <None Remove=".gitignore" />
    <None Remove="LICENSE" />
    <None Remove="README.md" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" Version="5.0.0" />
    <PackageReference Include="YumeChan.PluginBase" Version="2.2.0" />
  </ItemGroup>

</Project>
